    },
    "attributes": {
        "backgroundColor": {
            "type": "string",
            "default": "blue-900"
        },
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "bottom": "80px"
                    }
                }
            }
        }
    }
